{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build Source",
            "type": "shell",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release build",
            "command": "rm *.zip;rm bin/*;dotnet build Source -c Release;rm bin/*.json",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "zip build",
            "command": "cd ${workspaceFolder}; zip -r KoseiHelper.zip Audio bin Dialog Graphics Loenn everest.yaml",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}